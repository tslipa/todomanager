<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ToDoManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/light_gray</item>

        <item name="colorSecondary">@color/light_orange</item>
        <item name="colorSecondaryVariant">@color/light_orange</item>
        <item name="colorOnSecondary">@color/light_gray</item>

        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/light_gray</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_orange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToDoManagerAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/gray</item>
        <item name="android:headerMonthTextAppearance">@color/gray</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/gray</item>
        <item name="android:headerYearTextAppearance">@color/gray</item>
        <item name="android:headerTimeTextAppearance">@color/gray</item>
        <item name="colorAccent">@color/gray</item>
        <item name="textColorAlertDialogListItem">@color/gray</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:buttonBarButtonStyle">@style/ToDoManagerButtonTheme</item>
    </style>

    <style name="ToDoManagerButtonTheme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>